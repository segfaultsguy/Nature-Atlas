<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4000"
        android:columnCount="3"
        android:visibility="visible">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="GPS Accuracy:"
            android:id="@+id/textView7"
            android:layout_row="0"
            android:layout_column="1" />

        <Spinner
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:id="@+id/organismType"
            android:layout_row="1"
            android:layout_column="0"
            android:entries="@array/Species" />

        <EditText
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:id="@+id/gpsAcc"
            android:layout_row="1"
            android:layout_column="1" />

        <Spinner
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:id="@+id/wildStatus"
            android:layout_row="2"
            android:layout_column="0" />

        <MultiAutoCompleteTextView
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:id="@+id/scientificName"
            android:hint="Scientific Name"
            android:layout_row="3"
            android:layout_column="0"
            android:autoText="false"
            android:maxLines="1"
            android:focusable="true" />

        <MultiAutoCompleteTextView
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:id="@+id/commonName"
            android:hint="Common Name"
            android:layout_row="4"
            android:layout_column="0"
            android:maxLines="1"
            android:focusable="true" />

        <Spinner
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:id="@+id/phenology"
            android:layout_row="5"
            android:layout_column="0" />

        <Spinner
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:id="@+id/abundance"
            android:layout_row="6"
            android:layout_column="0"
            android:entries="@array/abundance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Latitude"
            android:id="@+id/textView3"
            android:layout_row="7"
            android:layout_column="0" />

        <EditText
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:id="@+id/Lat"
            android:layout_row="7"
            android:layout_column="1"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Longitude"
            android:id="@+id/textView4"
            android:layout_row="8"
            android:layout_column="0" />

        <EditText
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/Lon"
            android:layout_row="8"
            android:layout_column="1"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="State"
            android:id="@+id/textView5"
            android:layout_row="9"
            android:layout_column="0" />

        <EditText
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/state"
            android:layout_row="9"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Country"
            android:id="@+id/textView6"
            android:layout_row="10"
            android:layout_column="0" />

        <EditText
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:id="@+id/country"
            android:layout_row="10"
            android:layout_column="1"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/gpsAccuracy"
            android:layout_row="0"
            android:layout_column="2" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editable by Others:"
            android:id="@+id/editableSwitch"
            android:layout_row="12"
            android:layout_column="1"
            android:checked="false" />

        <ImageButton
            android:layout_width="144dp"
            android:layout_height="120dp"
            android:id="@+id/userImage"
            android:layout_row="13"
            android:layout_column="0"
            android:layout_rowSpan="42"
            android:onClick="GetImage" />

        <ImageButton
            android:layout_width="141dp"
            android:layout_height="117dp"
            android:id="@+id/userImageTwo"
            android:layout_row="22"
            android:layout_column="1"
            android:nestedScrollingEnabled="true"
            android:onClick="GetImageTwo" />

        <Button

            android:layout_row="200"
            android:layout_column="0"
            android:text="Submit"
            android:onClick="Submit" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save As Draft"
            android:id="@+id/button2"
            android:layout_row="200"
            android:layout_column="1"
            android:onClick="SaveDraft" />

    </GridLayout>
</ScrollView>